<h2>Export Tool</h2>
<form id="form-export" method="post" action="/export">
    <textarea name="raw-query" placeholder="Enter raw JSON query for ES ..."></textarea>
    <ul>
        {{#each formats}}
            <li>
                <label for="format-{{this}}">{{this}}</label><input id="format-csv" type="radio" name="format"
                                                                    value="{{this}}"/>
            </li>
        {{/each}}
    </ul>
    <input type="submit" value="submit"/>
</form>

<h2>Report Tool</h2>
<form id="form-report" method="post" action="/report">
    <textarea name="raw-query" placeholder="Enter raw JSON query for ES ..."></textarea>
    <input type="submit" value="submit"/>
</form>